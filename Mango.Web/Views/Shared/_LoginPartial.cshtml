<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a class="nav-item">Hello @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-item" asp-controller="home" asp-action="logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-item" asp-controller="home" asp-action="login">Login</a>
        </li>
    }
</ul>